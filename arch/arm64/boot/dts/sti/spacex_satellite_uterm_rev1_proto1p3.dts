/dts-v1/;
#include "spacex_satellite_uterm_production.dtsi"

/ {
	gpios {
		/*
		 * WiFi.
		 */
		factory_rst   = <&pio21 6>;

		/*
		 * Reset.
		 */
		self_reset = <&pio23 5 1>;   /* 0=reset*/

		/*
		 * Shiraz. (DBFs)
		 */
		dbf_v0p9_ok   = <&pio31 1>;

		/*
		 * Peanuts. (FEMs)
		 */
		fem_v1p8_ok   = <&pio31 0>;
	};

	soc {
		/*
		 * ADC temp sensors, voltage, and current monitors.
		 *
		 * Proto1 has 2 muxes on channels 3 and 4.
		 */
		telemetry_adc: sti_adc@8900000 {
			vref-external = <1800>; /* 1.8v external reference */
			use-external = <0 0 0 0 0 0 0 1>;

			mux-gpio = <&pio12 4 0>,
				   <&pio12 6 0>,
				   <&pio12 7 0>;

			mux@3 {
				input-channel = <3>;
				vchan-count = <8>;
			};
			mux@4 {
				input-channel = <4>;
				vchan-count = <8>;
			};
		};
	};
};
